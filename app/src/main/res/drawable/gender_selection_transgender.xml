<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_selected="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/bg_passenger_transgender"/>
        </shape>
    </item>
    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/bg_passenger_transgender1"/>
                </shape>
            </item>
            <item>
                <bitmap android:gravity="top|left|center_vertical|center_horizontal|center" android:src="@drawable/ic_save" android:tint="@color/white" android:tileModeY="clamp"/>
            </item>
        </layer-list>
    </item>
</selector>
