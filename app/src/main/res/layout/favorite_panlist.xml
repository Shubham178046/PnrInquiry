<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/lightdark"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/pnrListRelLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="1dp"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:weightSum="3">

        <RelativeLayout
            android:id="@+id/rl_favlist_pnr"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.6">

            <TextView
                android:id="@+id/tv_pnr_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="PNR :"
                android:textColor="@color/black_new_opa_50"
                android:textSize="14dp" />
            <TextView
                android:id="@+id/tv_pnr_number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/tv_pnr_text"
                android:gravity="center_vertical"
                android:text="856321478"
                android:textColor="@color/black_new_opa_50"
                android:textSize="14dp" />
            <TextView
                android:id="@+id/tv_fav_pnr"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@+id/tv_pnr_number"
                android:gravity="center_vertical"
                android:text="Ravi"
                android:textColor="@color/divider_ine"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_doj_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@+id/tv_fav_pnr"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="DOJ : "
                android:textColor="@color/black_new_opa_50"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_doj_pnr"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@+id/tv_doj_text"
                android:gravity="center_vertical"
                android:text="15/02/1993"
                android:textColor="@color/divider_ine"
                android:textSize="14dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4">

            <ImageView
                android:id="@+id/pnr_delete"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:paddingTop="2dp"
                android:paddingRight="12dp"
                android:paddingBottom="1dp"
                android:src="@drawable/ic_delete" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
